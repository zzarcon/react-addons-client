<header>
  <h1>React Addons</h1>
  <h3>{{filteredContent.length}} Components</h3>
  <div class="filters">
    {{paper-text id="filter-packages" label="Query" value=query}}
    {{paper-text id="page-limit" label="Page limit" value=limitPerPage}}
  </div>
</header>
<div id="content">
<footer>
  {{#paper-button raised=true classNames="md-primary" action="prev"}}Previous{{/paper-button}}
  {{#paper-button raised=true classNames="md-primary" action="next"}}Next{{/paper-button}}
</footer>
  <table>
    <thead>
      <tr>
        <th class="package-name">Name</th>
        <th>Mantainer</th>
        <th>Version</th>
        <th class="package-updated-at">Updated</th>
      </tr>
    </thead>
    <tbody>
      {{#each package in currentContent}}
        <tr {{action "openUrl" package.packageLink}}>
          <td>
            <div class="package-name">{{package.name}}</div>
            <div class="package-description">{{package.description}}</div>
          </td>
          <td {{action "openUrl" package.maintainerLink bubbles=false}} class="maintainer-name center-text">{{package.maintainer}}</td>
          <td class="center-text">{{package.version}}</td>
          <td class="center-text">{{package.timeAgo}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
